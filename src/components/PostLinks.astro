---
const { posts } = Astro.props;
---

<ul class="!ml-0 grid gap-10">
  <li class="hidden lg:grid grid-cols-[140px_1fr] font-sans text-base">
    <span class="font-sans">Date</span>
    <span>Title</span>
  </li>
  {
    posts.map(
      ({
        date,
        title,
        slug,
      }: {
        date: string;
        slug: string;
        title: string;
      }) => {
        return (
          <li class="grid lg:grid-cols-[140px_1fr] items-baseline">
            <time
              class="font-sans text-base"
              datetime={new Date(date).toISOString()}
            >
              {new Date(date).toLocaleDateString("en-US")}
            </time>
            <a href={`/blog/${slug}`}>
              {title}
            </a>
          </li>
        );
      }
    )
  }
</ul>
