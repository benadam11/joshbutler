---
import sanitize from "../utils/sanitize";

const { posts } = Astro.props;
---

<div class="grid gap-8">
  <h4>Recent Posts</h4>
  <ul class="grid gap-6">
    {
      posts.map(
        ({ slug, title }: { slug: string; title: string; }) => (
          <li>
            <a class="underline text-xl" href={slug}>
              {sanitize(title)}
            </a>
          </li>
        )
      )
    }
  </ul>
  <a class="text-xl font-bold underline" href="/blog">More</a>
</div>
